@model DistrictInfo
@{
    ViewData["Title"] = "AddEditDistrict";
}

<h1>Add/Edit District</h1>

<form asp-action="Create">
    <div class="container">
        <input type="hidden" asp-for="DId" />
        <div class="row mb-3">
            <div class="col-md-3">Title</div>
            <div class="col-md-9">
                <input type="text" asp-for="DName" class="form-control" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Bact To List</a>
            </div>
        </div>
    </div>
</form>

